<article class="content-publication">
    <h1>Title: {{title}}</h1>

    <!--If no one has shared the post yet, the number should be zero -->
    {{#if sharedUsers}}
   <p>Number of people shared the publication: {{sharedUsers.length}}</p>
   {{else}}
    <!--Otherwise, show the number -->
    <p>Number of people shared the publication: 0</p>
    {{/if}}
    <a href="/action/{{_id}}/details" class="image-details">View publication</a>
</article>